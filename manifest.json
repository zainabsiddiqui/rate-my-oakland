{
  "manifest_version": 2,
  "short_name": "RateMyOU",
  "name": "RateMyOakland",
  "description": "Make OU class registration a breeze.",
  "version": "1.5",
  "content_scripts": [
    {
      "matches": ["https://*.oakland.edu/*"],

      "css": ["jquery-ui-1.12.1.custom/jquery-ui.css", "tooltip.css"],

      "js": ["jquery-3.3.1.js", "jquery-ui-1.12.1.custom/jquery-ui.js", "main.js"]

    }
  ],

  "permissions": [

  	"http://www.ratemyprofessors.com/*", "activeTab"
  ],

  "browser_action": {
      "default_icon": {
        "16": "images/ToolbarIcon.png"
      }
    },

  "background": {

    "scripts": ["background.js"],
    "persistent": true

    }
}
